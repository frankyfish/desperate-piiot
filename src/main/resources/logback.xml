<!--        </encoder>-->
<!--    </appender>-->

    <root level="trace">
        <appender-ref ref="FILE-ROLLING"/>
    </root>

    <!--  uncomment following block to see full log in terminal  -->
    <root level="debug">
        <appender-ref ref="STDOUT"/>
    </root>

